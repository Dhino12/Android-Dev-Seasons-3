<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">


    <ImageView
        android:id="@+id/imageViewFoodUpdate"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/edtNameUpdate"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/edtNameUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edtPriceUpdate"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Name"/>

    <EditText
        android:id="@+id/edtPriceUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Price"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#265dc4"
        android:text="Update"
        android:textColor="#ffffff"
        android:layout_below="@+id/edtPriceUpdate"
        android:layout_alignParentStart="true" />
</RelativeLayout>